<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radio_11"
    android:backgroundTint="@color/color_primary"
    android:padding="@dimen/ic_padding_1">
    <TextView
        android:id="@+id/tag_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ic_size_minimal"
        android:text="#tag"
        android:textColor="@color/snow_white"/>
    <ImageView
        android:layout_width="@dimen/ic_size_minimal"
        android:layout_height="@dimen/ic_size_minimal"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_toRightOf="@id/tag_text"
        android:layout_centerVertical="true"
        app:tint="@color/snow_white" />
</RelativeLayout>