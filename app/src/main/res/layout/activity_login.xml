<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:padding="@dimen/padding_main"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:padding="@dimen/ic_padding_3"
            android:src="@drawable/ic_email"
            app:tint="@color/snow_white" />;
        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ic_size"
            android:background="@drawable/border_shadow_rect"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/ic_size"
            android:layout_height="@dimen/ic_size"
            android:padding="@dimen/ic_padding_3"
            android:src="@drawable/ic_baseline_vpn_key_24"
            app:tint="@color/snow_white" />;
        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ic_size"
            android:background="@drawable/border_shadow_rect"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/ic_padding_3"
        android:text="Logar"
        android:textColor="@color/snow_white"
        android:textSize="@dimen/h4"
        android:background="@drawable/background_radio_11"
        android:backgroundTint="@color/my_green"
        android:layout_marginTop="30dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar cadastro"
        android:background="#00000000"
        android:textColor="@color/my_green"
        android:textSize="@dimen/h5"
        android:layout_marginTop="30dp"/>

</LinearLayout>